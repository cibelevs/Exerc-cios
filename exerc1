void listaPrimos(Nodo* inicio) {
    Nodo* listaPrimos = nullptr;
    Nodo* fimPrimos = nullptr;
    Nodo* aux = inicio;

    while (aux != nullptr) {
        if (primo(aux->info)) {
            // Cria um novo nó com a mesma informação
            Nodo* novo = new Nodo();
            novo->info = aux->info;
            novo->prox = nullptr;

            if (listaPrimos == nullptr) {
                listaPrimos = novo;
                fimPrimos = novo;
            } else {
                fimPrimos->prox = novo;
                fimPrimos = novo;
            }
        }
        aux = aux->prox;
    }
}

void removerPares(Nodo*& inicio) {
    Nodo* atual = inicio;
    Nodo* anterior = nullptr;

    while (atual != nullptr) {
        if (atual->info % 2 == 0) {  // se for par
            Nodo* temp = atual;
            if (anterior == nullptr) {
                // removendo o primeiro nó
                inicio = atual->prox;
                atual = inicio;
            } else {
                anterior->prox = atual->prox;
                atual = atual->prox;
            }
            delete temp;  // libera memória
        } else {
            anterior = atual;
            atual = atual->prox;
        }
    }
}
