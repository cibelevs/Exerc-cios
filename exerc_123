// Faça um algoritmo que leia um valor e escreva: 0, se o valor é zero; 1, e o
//valor é maior que zero; -1 - se o valor é negativo.
#include<stdio.h>

int func_num (int num)
{
    if (num > 0)
    {
        printf("1");
    }
    else 
    if (num < 0)
    {
        printf ("-1");
    }
    else 
    {
        printf ("0");
    }
 return num;
}

int main ()
{
    int num;
    printf ("Informe um número: ");
    scanf("%d", &num);
    
    func_num(num);
    
    
 return 0;
}

