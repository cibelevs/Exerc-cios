//Faça um algoritmo que leia um valor e escreva: 0, se o valor é par; 1, se o valor é ímpar.
#include<stdio.h>
int main()
{
    int num;
    printf ("Insira um número: ");
    scanf("%d", &num);
    
    if (num % 2 == 0)
    {
        printf("0");
    }
    else 
    {
        printf ("1");
    }

    return 0;
}
