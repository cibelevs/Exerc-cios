//Faça um algoritmo que leia dois valores e escreva os dois em ordem crescente
#include<stdio.h>
int main ()
{
    int num1, num2;
    int maior, menor ;
    
    printf("Insira um valor: ");
    scanf ("%d", &num1);
    
    printf("Insira um valor: ");
    scanf ("%d", &num2);
    
    if (num1>num2)
    {
       maior = num1;
       menor = num2;
    }
    else 
    if (num2 > num1)
    {
      maior = num2;
      menor = num1;
    }    
    else 
    {
        printf ("Números iguais.");
        return 0;
    }
    
    printf("Ordem crescente: %d %d", maior, menor);
    
    return 0;
}
/////////////////////////////////////////////////////////////////

//Faça um algoritmo que leia 3 valores v1, v2 e v3, e escreva-os em ordem crescente
#include<stdio.h>
int main ()
{
    int v1, v2, v3;
    int maior, meio, menor;
    
    printf("Insira o valor 1: ");
    scanf ("%d", &v1);
   
    printf("Insira o valor 2: ");
    scanf ("%d", &v2);
    
    printf("Insira o valor 3: ");
    scanf ("%d", &v3);
    
    if (v1 == v3 && v1 == v2)
    {
        printf ("Números iguais");
        return 0;
    }
    
    
    if (v1 > v2)
    {
        maior = v1;
        menor = v2;
    }
    else
    {
        maior = v2;
        menor = v1;
    }
    
    if ( v3 <= maior && v3 >= menor)
    {
        meio = v3;
    }
    else 
    if (v3 > maior)
    {
        meio = maior;
        maior = v3;
    }
    if (v3 < menor)
    {
        meio = menor;
        menor = v3;   
    }
    
    printf ("%d %d %d", menor, meio, maior);
    return 0;
}
