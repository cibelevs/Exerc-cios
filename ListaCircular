#include <iostream>
#include<cstring>
using namespace std;

//criando struct nodo2
struct Nodo2 {
    char palavra[20];
    struct Nodo2 *ant, *prox;
};

class ListaCircular{
    //criando variaveis auxiliares inicio e fim (fila)
    private:
    Nodo2 * inicio, *fim;

    public:
    ListaCircular(){
        inicio = nullptr;
        fim = nullptr;
    }

    void inserirPalavra(char word[]){
        //criando um novo Nodo tipo Nodo2
        Nodo2 * novo;
        novo = new Nodo2();

        if(novo == nullptr){
            cout<<"Erro ao alocar memoria"<<endl; //avisar ao usuário caso erro
            return;
        }

        //inserir palavra no Nodo (função da biblioteca cstring)
        strcpy(novo->palavra, word);

        // 1 caso - primeiro elemento (primeira palavra)
        if(inicio == nullptr){
            inicio = novo;
            novo->ant = inicio;
            novo->prox = inicio;
            fim = inicio;
        } 
        else{
            //2 caso - proximas palavras, fazendo as mudanças no NOVO primeiro
            novo->ant = fim;
            novo->prox = inicio;
            fim->prox = novo;
            inicio->ant = novo; //enlaçando com o final
            fim = novo;
        } 
    }
      void retirarPalavra(){
        Nodo2 * aux;

        if(inicio == nullptr){
            cout<<"Não tem elementos na lista"<<endl;
            return;
        }

        aux = inicio;
        while ((aux->prox != fim) ){
            aux = aux->prox;
        }

        fim = aux ->ant;
        fim ->prox = inicio;
        delete aux;

    }
    
       void imprimirFila(){
        Nodo2 * auxiliar;
        
        cout<<"Imprimindo a fila completa"<<endl;
        
        auxiliar = inicio;
        while(auxiliar->prox != inicio){
            cout<<auxiliar->palavra<<endl;
            auxiliar = auxiliar->prox;
        }

    }

    


};

int main(void){
    ListaCircular list;
    list.inserirPalavra((char *) "Aula");



    return 0;
}
