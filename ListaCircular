#include <iostream>
#include<cstring>
using namespace std;

//criando struct nodo2
struct Nodo2 {
    char palavra[20];
    struct Nodo2 *ant, *prox;
};

class ListaCircular{
    //criando variaveis auxiliar
    private:
    Nodo2 * inicio, *fim;

    public:
    //construtor
    ListaCircular(){
        inicio = nullptr;
        fim = nullptr;
    }

    void inserirPalavra(char word[]){
        Nodo2 * novo;
        novo = new Nodo2();

        if(novo == nullptr){
            cout<<"Erro ao alocar memoria"<<endl;
            return;
        }

        //inserir palavra no Nodo
        strcpy(novo->palavra, word);

        //primeiro elemento (primeira palavra)
        if(inicio == nullptr){
            inicio = novo;
            novo->ant = inicio;
            novo->prox = inicio;
            fim = inicio;
        } 
        else{
            //seguindo a ordem, fazendo as mudanças no NOVO primeiro
            novo->ant = fim;
            novo->prox = inicio;
            fim->prox = novo;
            inicio->ant = novo; //enlaçando com o final
            fim = novo;
        } 
    }
      void retirarPalavra(){
        Nodo2 * aux;

        if(inicio == nullptr){
            cout<<"Não tem elementos na lista"<<endl;
            return;
        }

        aux = inicio;
        while ((aux->prox != fim) ){
            aux = aux->prox;
        }

        fim = aux ->ant;
        fim ->prox = inicio;
        delete aux;

    }
    
    
    


};

int main(void){
    ListaCircular list;
    list.inserirPalavra((char *) "Aula");



    return 0;
}
